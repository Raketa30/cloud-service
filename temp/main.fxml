<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="ru.geekbrains.cloudservice.client.controller.MainControllerDepricated">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#btnExitAction" text="Close"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <MenuItem mnemonicParsing="false" text="Delete"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <MenuItem mnemonicParsing="false" text="About"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
    <center>
        <HBox>
            <fx:include source="client_panel.fxml" fx:id="leftPanel" HBox.hgrow="ALWAYS"/>
            <fx:include source="server_panel.fxml" fx:id="rightPanel" HBox.hgrow="ALWAYS"/>
        </HBox>
    </center>
    <bottom>
        <HBox prefHeight="37.0" prefWidth="800.0" spacing="5">
            <Button onAction="#sendFileToServerAction" prefHeight="25.0" prefWidth="171.0" text="Send File To Server"
                    HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
