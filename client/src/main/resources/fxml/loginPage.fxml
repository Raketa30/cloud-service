<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="650.0"
            style="-fx-background-color: #819ca9;" xmlns="http://javafx.com/javafx/16"
            fx:controller="ru.geekbrains.cloudservice.controller.AuthController">
    <children>
        <AnchorPane prefHeight="70.0" prefWidth="654.0" style="-fx-background-color: #29434e;">
            <children>
                <Label layoutX="14.0" layoutY="13.0" prefHeight="44.0" prefWidth="297.0" text="GeekBrains MyCloud"
                       textFill="WHITE">
                    <font>
                        <Font name="Arial" size="30.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="207.0" layoutY="79.0" prefHeight="321.0" prefWidth="433.0">
            <children>
                <TextField fx:id="loginUserName" layoutX="138.0" layoutY="38.0" prefHeight="41.0" prefWidth="263.0"
                           promptText="Login"/>
                <JFXButton fx:id="regButton" layoutX="140.0" layoutY="189.0" onAction="#signUp" prefHeight="35.0"
                           prefWidth="89.0" style="-fx-background-color: #546e7a #546e7a;" text="Sign Up"
                           textFill="WHITE"/>
